{
  "name": "serenity/modulr",
  "description": "Modulize your Laravel apps",
  "keywords": [
    "laravel",
    "modules",
    "modulize",
    "module"
  ],
  "authors": [
    {
      "name": "Jetstream Labs, LLC.",
      "email": "hello@jetstreamlabs.com"
    },
    {
      "name": "Chris Morrell",
      "homepage": "http://www.cmorrell.com"
    }
  ],
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "ext-simplexml": "*",
    "ext-dom": "*",
    "composer/composer": "^2.6.6",
    "illuminate/support": "^9|^10|11.x-dev|dev-master"
  },
  "require-dev": {
    "orchestra/testbench": "^7.10|^8|8.x-dev|9.x-dev|dev-master",
    "mockery/mockery": "^1.6.7",
    "phpunit/phpunit": "^10.5.9",
    "ext-json": "*",
    "jetstreamlabs/pinte": "^1.1.0",
    "pestphp/pest": "^2.32",
    "pestphp/pest-plugin-faker": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.2",
    "pestphp/pest-plugin-type-coverage": "^2.8",
    "pestphp/pest-plugin-watch": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Serenity\\Modulr\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Serenity\\Modulr\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "fix": "vendor/bin/pinte"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Serenity\\Modulr\\Providers\\ModulrServiceProvider"
      ],
      "aliases": {
        "Modulr": "Serenity\\Modulr\\Support\\Facades\\Modulr"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
